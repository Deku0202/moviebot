# Telegram
TG_API_ID=
TG_API_HASH=
TG_SESSION=telethon.session
TG_TARGET=

# Optional safety allowlist (comma-separated)
# Example: TG_ALLOWED_TARGETS=@mychannel,-1001234567890
TG_ALLOWED_TARGETS=

# Google Drive
GOOGLE_CREDS_FILE=credentials.json
GOOGLE_OAUTH_TOKEN=token.json

# Upload tuning
TG_UPLOAD_PART_SIZE_KB=512
TG_UPLOAD_CONNECTIONS=8
TG_UPLOAD_READ_CHUNK_KB=512
TG_MAX_UPLOAD_MBPS=15
TG_PREMIUM_ACCOUNT=false
TG_MAX_FILE_GB=2
DRIVE_STREAM_CHUNK_MB=64
DRIVE_STREAM_PREFETCH_CHUNKS=16
DRIVE_REQUEST_TIMEOUT_SEC=300

# Send pacing / retry
MIN_SECONDS_BETWEEN_SENDS=5
SEND_JITTER_MIN_SECONDS=1
SEND_JITTER_MAX_SECONDS=3
MAX_SEND_RETRIES=8

# Logging
LOG_JSON=true
LOG_LEVEL=INFO

# Optional daily cap (0 = disabled)
DAILY_SEND_LIMIT=0
DAILY_STATE_FILE=daily_send_state.json
